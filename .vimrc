set nocompatible
filetype plugin indent on
syntax on

set autoindent
set background=dark
set cursorline
set cursorlineopt=number
set expandtab
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set linebreak
set number
set relativenumber
set ruler
set shiftwidth=4
set showmatch
set smartcase
set smartindent
set smarttab
set tabstop=4
set textwidth=80
set updatetime=100
set wildmenu
set wildmode=longest,full
set wrap

" Disable arrow keys in Normal mode
noremap <Left> <Nop>
noremap <Right> <Nop>
noremap <Up> <Nop>
noremap <Down> <Nop>

" Disable arrow keys in Insert mode
inoremap <Left> <Nop>
inoremap <Right> <Nop>
inoremap <Up> <Nop>
inoremap <Down> <Nop>

" Disable arrow keys in Visual mode
vnoremap <Left> <Nop>
vnoremap <Right> <Nop>
vnoremap <Up> <Nop>
vnoremap <Down> <Nop>

" Disable arrow keys in Command-line mode
cnoremap <Left> <Nop>
cnoremap <Right> <Nop>
cnoremap <Up> <Nop>
cnoremap <Down> <Nop>

