set nocompatible

filetype plugin indent on

set autoindent
set background=dark
set cursorcolumn
set cursorline
set cursorlineopt=number
set expandtab
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set lazyredraw
set linebreak
set number
set relativenumber
set ruler
set shiftwidth=4
set showmatch
set smartcase
set smartindent
set smarttab
set syntax=on
set textwidth=80
set wrap
set tabstop=4
set wildmenu
set wildmode=longest,full
